{deps_dir, ["deps"]}.

{deps, [

    {covertool, ".*", {git, "git@github.com:miranetworks/covertool.git", "master"}}

]}. 

{eunit_opts, [verbose, {report,{eunit_surefire,[{dir,"."}]}}] }.
{cover_enabled, true}.
{plugins, [rebar_covertool]}.
{covertool_eunit, ".eunit/eunit.coverage.xml"}. % Output report file name



{port_env, [
            {"CFLAGS", "$CFLAGS -Wall -O3"},
            {"LDFLAGS", "-ldb"}
            ]}.

